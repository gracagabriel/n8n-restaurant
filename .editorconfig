# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false

[Dockerfile*]
indent_style = space
indent_size = 2

[docker-compose*.yml]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2
