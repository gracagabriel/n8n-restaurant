# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=postgresql://restaurant_user:restaurant_password@postgres:5432/restaurant_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=restaurant_user
DATABASE_PASSWORD=restaurant_password
DATABASE_NAME=restaurant_db

# ==========================================
# JWT & SECURITY
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# ==========================================
# API
# ==========================================
API_PORT=3000
API_HOST=0.0.0.0
API_PREFIX=/api
NODE_ENV=development
LOG_LEVEL=debug

# ==========================================
# FRONTEND
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# ==========================================
# N8N
# ==========================================
N8N_HOST=http://localhost:5678
N8N_PROTOCOL=http
N8N_PORT=5678
N8N_EDITOR_BASE_URL=http://localhost:5678/
N8N_USER_MANAGEMENT_JWT_SECRET=n8n-secret-key
WEBHOOK_URL=http://localhost:3000/webhooks

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# ==========================================
# MAIL (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@restaurant.com

# ==========================================
# AWS S3 (Optional - for image uploads)
# ==========================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=restaurant-uploads

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
